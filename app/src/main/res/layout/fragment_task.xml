<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.kanbanboardapp.ui.taskFragment.TaskViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_create_account"
        tools:context=".ui.taskFragments.TaskFragment">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:hint="Enter Your Name"
            app:boxBackgroundColor="#8BFFFFFF"
            app:boxStrokeColor="#2f617a"
            app:hintTextColor="#8BFFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.38">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/constan"
                android:textColor="@color/black"
                android:text="@={viewModel.userName}"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Enter Your Email"
            app:boxBackgroundColor="#8BFFFFFF"
            app:boxStrokeColor="#2f617a"
            app:hintTextColor="#8BFFFFFF"
            app:layout_constraintEnd_toEndOf="@id/name"
            app:layout_constraintStart_toStartOf="@id/name"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:suffixText="@string/mail_sympol"
            app:suffixTextColor="#83000000">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/constan"
                android:text="@={viewModel.userEmail}"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Enter Your Password"
            app:boxBackgroundColor="#8BFFFFFF"
            app:boxStrokeColor="#2f617a"
            app:endIconMode="password_toggle"
            app:hintTextColor="#8BFFFFFF"
            app:layout_constraintEnd_toEndOf="@id/Email"
            app:layout_constraintStart_toStartOf="@id/Email"
            app:layout_constraintTop_toBottomOf="@id/Email">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/constan"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:text="@={viewModel.userPassword}"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/constanb"
            android:onClick="@{()->viewModel.checkTask()}"
            android:text="Register"
            android:textColor="@color/black"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/password"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.85" />

        <TextView
            android:id="@+id/login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:fontFamily="@font/constanb"
            android:gravity="start"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/register"
            app:layout_constraintStart_toStartOf="@id/password" />

        <TextView
            android:id="@+id/welcome1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/constanb"
            android:gravity="start"
            android:text="Create\nAccount"
            android:textColor="@color/white"
            android:textSize="48sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@id/name"
            app:layout_constraintEnd_toEndOf="@id/name"
            app:layout_constraintStart_toStartOf="@id/name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.77" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
