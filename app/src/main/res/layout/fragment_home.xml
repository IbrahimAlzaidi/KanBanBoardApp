<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.kanbanboardapp.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

        <EditText
            android:id="@+id/taskName"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Enter Task Name"
            android:gravity="center"
            android:inputType="text"
            android:text="@={viewModel.taskName}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/taskTitle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Enter Task Title"
            android:gravity="center"
            android:inputType="text"
            android:text="@={viewModel.taskTitle}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/taskName" />

        <EditText
            android:id="@+id/taskDescription"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Enter Task Description"
            android:gravity="center"
            android:inputType="text"
            android:text="@={viewModel.taskDescription}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/taskTitle" />

        <EditText
            android:id="@+id/taskType"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:hint="Enter Task Type"
            android:inputType="text"
            android:text="@={viewModel.taskType}"
            app:layout_constraintEnd_toEndOf="@+id/taskDescription"
            app:layout_constraintStart_toStartOf="@+id/taskDescription"
            app:layout_constraintTop_toBottomOf="@id/taskDescription" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{()->viewModel.checkTask()}"
            android:text="Add Task"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/taskType"
            app:layout_constraintTop_toBottomOf="@id/taskType" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/myRecycler"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            app:items="@{viewModel.task}"
            app:layout_constraintTop_toBottomOf="@id/button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/task_item"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
